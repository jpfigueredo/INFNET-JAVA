package dominio;

import exceptions.NumeroInvalidoException;

public class Professor extends Pessoa{
	
    private String materia;
    private static int indexID;
    private static String[] materias;
    
    public Professor(){
		this.setId(indexID++);
		this.setMateria("Java");
    }
    
    public Professor(String nome, String sobrenome, String materia){
    	super(nome, sobrenome);
        this.materia = materia;
    }

    @Override
    public void impressao() {
    	super.impressao();
    	System.out.println("Matéria: "+this.materia);
    }
    
    
	public String getMateria() {
		return materia;
	}

	public void setMateria(String materia) {
		materias = new String["Portugues","Matematica","Geografia","Historia","Fisica",
		                      "Quimica","Biologia","Educação Fisica","Filosofia","Inglês"];
		if(materia != "Matematica") {
    		throw new NomeIncompletoException("Matéria indisponível!");
    	}
		this.materia = materia;
	}

	public static int getIndexID() {
		return indexID;
	}

}

